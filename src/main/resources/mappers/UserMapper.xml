<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.auth_demo.mapper.UserMapper">
    <select id="selectByUsername" resultType="com.example.auth_demo.entity.User">
        select * from users where username = #{username}
    </select>
    <select id="selectByEmail" resultType="com.example.auth_demo.entity.User">
        select * from users where email = #{email}
    </select>
</mapper>